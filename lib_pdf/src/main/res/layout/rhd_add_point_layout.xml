<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rhd_blue_stroke_bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/check_zm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="组名"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@id/check_zm_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/check_zm_edit"
        app:layout_constraintTop_toTopOf="@id/check_zm_edit" />

    <EditText
        android:id="@+id/check_zm_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:background="@drawable/check_rhd_edit_bg"
        android:gravity="center_vertical"
        android:hint="请输入组名"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_600"
        android:textSize="10dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/check_zm_name"
        app:layout_constraintRight_toLeftOf="@id/check_cdm_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/check_cdm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:includeFontPadding="false"
        android:text="测点名"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@id/check_cdm_edit"
        app:layout_constraintLeft_toRightOf="@id/check_zm_edit"
        app:layout_constraintRight_toLeftOf="@id/check_cdm_edit"
        app:layout_constraintTop_toTopOf="@id/check_cdm_edit" />

    <EditText
        android:id="@+id/check_cdm_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/check_rhd_edit_bg"
        android:gravity="center_vertical"
        android:hint="请输入测点名"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_600"
        android:textSize="10dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/check_cdm_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check_cdm_edit">

        <TextView
            android:id="@+id/rhd_add_point_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@drawable/check_rhd_edit_bg"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:paddingBottom="6dp"
            android:text="取消"
            android:textColor="@color/black_800"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/rhd_add_point_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@drawable/rhd_blue_bg"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:paddingBottom="6dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/rhd_add_point_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rhd_delete_bg"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:paddingBottom="6dp"
            android:text="删除"
            android:textColor="#F56C6C"
            android:textSize="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>