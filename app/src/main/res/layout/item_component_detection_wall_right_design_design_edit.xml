<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/check_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_9sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:gravity="center"
        android:text="设计 东西向钢筋"
        android:textColor="@color/black"
        android:textSize="@dimen/_6ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.sribs.bdd.v3.view.OneChooseSpinnerView
        android:id="@+id/check_cpd_left_real_spinner_2"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_6sdp"
        app:layout_constraintLeft_toRightOf="@id/check_edit_name"
        app:layout_constraintTop_toTopOf="parent"

        ></com.sribs.bdd.v3.view.OneChooseSpinnerView>

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:text=","
        android:textColor="@color/black"
        android:textSize="@dimen/_5ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/check_cpd_left_real_spinner_2"></TextView>



    <TextView
        android:id="@id/check_edit_name_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="箍筋规格"
        android:textSize="@dimen/_5ssp"
        app:layout_constraintLeft_toRightOf="@id/tv_2"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <EditText
        android:id="@+id/check_edit_3"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_13sdp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/check_gray_stroke_bg"
        android:minWidth="@dimen/_100sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_600"
        android:textSize="@dimen/_6ssp"
        app:layout_constraintLeft_toRightOf="@id/tv_2"
        app:layout_constraintTop_toBottomOf="@id/check_edit_name_2" />


    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:text=","
        android:textColor="@color/black"
        android:textSize="@dimen/_5ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/check_edit_3"></TextView>



    <TextView
        android:id="@id/check_edit_name_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="间距"
        android:textSize="@dimen/_5ssp"
        app:layout_constraintLeft_toRightOf="@id/tv_1"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <EditText
        android:id="@+id/check_edit_2"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_13sdp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/check_gray_stroke_bg"
        android:minWidth="@dimen/_100sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_600"
        android:textSize="@dimen/_6ssp"
        app:layout_constraintLeft_toRightOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/check_edit_name_2" />




</androidx.constraintlayout.widget.ConstraintLayout>