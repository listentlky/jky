<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/blue_800"
    android:paddingTop="@dimen/_1sdp"
    android:paddingBottom="@dimen/_1sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/check_obd_menu_scale"
        android:layout_width="@dimen/_18sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/check_obd_menu_close"
        android:background="@mipmap/icon_check_damage_scale"
        android:layout_height="@dimen/_18sdp"/>

    <ImageView
        android:id="@+id/check_obd_menu_close"
        android:layout_width="@dimen/_18sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@mipmap/icon_check_damage_close"
        android:layout_height="@dimen/_18sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>