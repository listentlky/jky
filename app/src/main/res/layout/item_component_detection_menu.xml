<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_400"
    android:clickable="true"
    android:focusable="true">


    <TextView
        android:id="@+id/check_cpd_left_menu_1"
        android:layout_width="@dimen/_60sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:text="实测截面尺寸"
        android:textColor="@color/blue"
        android:textSize="@dimen/_6ssp" />

    <TextView
        android:id="@+id/check_cpd_left_menu_2"
        android:layout_width="@dimen/_60sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/check_cpd_left_menu_1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:text="设计截面尺寸"
        android:textColor="@color/black"
        android:textSize="@dimen/_6ssp" />


    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/check_cpd_left_menu_3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/check_cpd_left_menu_2"
        app:layout_constraintLeft_toRightOf="@id/check_cpd_left_menu_2"
        android:gravity="center"
        android:text="是否有配筋检测"
        android:paddingLeft="@dimen/_2sdp"
        android:checked="true"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/v3_check_selector"
        android:visibility="gone"
        android:drawablePadding="@dimen/_2sdp"
        android:button="@null"
        android:textSize="@dimen/_6ssp"></com.google.android.material.checkbox.MaterialCheckBox>



    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/check_cpd_left_menu_4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/check_cpd_left_menu_2"
        app:layout_constraintLeft_toRightOf="@id/check_cpd_left_menu_3"
        android:gravity="center"
        android:checked="false"
        android:button="@null"
        android:paddingLeft="@dimen/_2sdp"
        android:drawablePadding="@dimen/_2sdp"
        android:drawableLeft="@drawable/v3_check_selector"
        android:background="@color/transparent"
        android:text="是否有设计值"
        android:textSize="@dimen/_6ssp"></com.google.android.material.checkbox.MaterialCheckBox>



</androidx.constraintlayout.widget.ConstraintLayout>
