<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/common_tag_check_root"
    android:orientation="horizontal"
  >

    <LinearLayout
        android:id="@+id/common_tag_check_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

      >

        <TextView
            android:id="@+id/common_tag_check_must"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:gravity="top"
            android:textColor="@color/red_500"
            android:textSize="@dimen/common_text_tag"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/common_tag_check_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/common_input_height"
            android:gravity="center|center_vertical"
            android:textSize="@dimen/common_text_tag"
            android:textColor="@color/black_800"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/common_tag_check_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:overScrollMode="never"
        />

</LinearLayout>