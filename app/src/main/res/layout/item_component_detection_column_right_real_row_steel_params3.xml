<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/content"
    android:layout_height="@dimen/_20sdp"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="@dimen/_110sdp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="描述"
            android:textSize="@dimen/_5ssp"></TextView>

        <EditText
            android:id="@+id/check_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/check_gray_stroke_bg"
            android:gravity="center_vertical"
            android:minWidth="@dimen/_110sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_600"
            android:textSize="@dimen/_6ssp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_50sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text=""
            android:textSize="@dimen/_5ssp"></TextView>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/check_cpd_subtitle_confirm"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="手绘草图"
            android:textColor="@color/white"
            android:textSize="@dimen/_5sdp"
            android:theme="@style/Theme.MaterialComponents.Light"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text=""
            android:textSize="@dimen/_5ssp"></TextView>


        <TextView
            android:id="@+id/check_cpd_another_pic_status"
            android:text="未绘制"
            android:gravity="center_vertical"
            android:textSize="@dimen/_6ssp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </TextView>
</LinearLayout>
</LinearLayout>