<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/check_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="轴线"
        android:textColor="@color/black"
        android:textSize="@dimen/_6ssp" />

    <EditText
        android:id="@+id/check_cdp_plate_menu_axis_1"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:background="@drawable/check_gray_stroke_bg"
        android:gravity="center_vertical"
        android:minWidth="@dimen/_25sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_600"
        android:textSize="@dimen/_6ssp" />

    <TextView
        android:id="@+id/check_edit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="@dimen/_7ssp" />

    <EditText
        android:id="@+id/check_cdp_plate_menu_axis_2"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:background="@drawable/check_gray_stroke_bg"
        android:gravity="center_vertical"
        android:minWidth="@dimen/_25sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_600"
        android:textSize="@dimen/_6ssp" />

    <TextView
        android:id="@+id/check_edit_flag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="/"
        android:textColor="@color/black"
        android:textSize="@dimen/_7ssp" />

    <EditText
        android:id="@+id/check_cdp_plate_menu_axis_3"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:background="@drawable/check_gray_stroke_bg"
        android:gravity="center_vertical"
        android:minWidth="@dimen/_25sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_600"
        android:textSize="@dimen/_6ssp" />


    <TextView
        android:id="@+id/check_edit_flag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="@dimen/_7ssp" />

    <EditText
        android:id="@+id/check_cdp_plate_menu_axis_4"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:background="@drawable/check_gray_stroke_bg"
        android:gravity="center_vertical"
        android:minWidth="@dimen/_25sdp"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_600"
        android:textSize="@dimen/_6ssp" />

</LinearLayout>