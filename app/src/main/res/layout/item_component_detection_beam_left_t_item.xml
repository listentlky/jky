<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_7ssp"
        android:layout_marginRight="@dimen/_5sdp"
        android:gravity="center"
        android:text="T型"
        android:textColor="@color/black"
        android:textSize="@dimen/_6ssp" />

    <LinearLayout
        android:layout_width="@dimen/_40sdp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="梁宽"
            android:textSize="@dimen/_5ssp"></TextView>

        <EditText
            android:id="@+id/check_cpd_left_rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/check_gray_stroke_bg"
            android:gravity="center_vertical"
            android:minWidth="@dimen/_90sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_600"
            android:textSize="@dimen/_6ssp" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:text="/"
        android:textColor="@color/black"
        android:textSize="@dimen/_8ssp"></TextView>


    <LinearLayout
        android:layout_width="@dimen/_40sdp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="翼缘宽度"
            android:textSize="@dimen/_5ssp"></TextView>

        <EditText
            android:id="@+id/check_cpd_left_rectangle_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/check_gray_stroke_bg"
            android:gravity="center_vertical"
            android:minWidth="@dimen/_90sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_600"
            android:textSize="@dimen/_6ssp" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:text="X"
        android:textColor="@color/black"
        android:textSize="@dimen/_8ssp"></TextView>


    <LinearLayout
        android:layout_width="@dimen/_40sdp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="下部高度"
            android:textSize="@dimen/_5ssp"></TextView>

        <EditText
            android:id="@+id/check_cpd_left_rectangle_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/check_gray_stroke_bg"
            android:gravity="center_vertical"
            android:minWidth="@dimen/_90sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_600"
            android:textSize="@dimen/_6ssp" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:text="/"
        android:textColor="@color/black"
        android:textSize="@dimen/_8ssp"></TextView>


    <LinearLayout
        android:layout_width="@dimen/_40sdp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="翼缘厚度"
            android:textSize="@dimen/_5ssp"></TextView>

        <EditText
            android:id="@+id/check_cpd_left_rectangle_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/check_gray_stroke_bg"
            android:gravity="center_vertical"
            android:minWidth="@dimen/_90sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_600"
            android:textSize="@dimen/_6ssp" />


    </LinearLayout>


</LinearLayout>