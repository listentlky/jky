<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:viewBindingIgnore="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_10">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_800">
        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_common_toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="@dimen/_20sdp"
            android:paddingHorizontal="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.sribs.common.ui.widget.TagEditView
                    android:id="@+id/builder_name"
                    android:layout_width="200dp"
                    android:layout_height="@dimen/login_input_height"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:TagText="楼名称"
                    app:TagPadding="@dimen/login_input_tag_margin"
                    app:EditBtnEnable="false"
                    app:EditEnable="true"
                    app:TagMust="false"
                    app:EditHint="请输入楼名称"/>

                <View
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chose_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/login_input_height"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:backgroundTint="@color/blue_800"
                    android:text="上传图片"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_text_title"
                    app:cornerRadius="@dimen/_2sdp"
                    app:rippleColor="@color/rippleColor"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/create_complete"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/login_input_height"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:backgroundTint="@color/blue_800"
                    android:text="创建完成"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_text_title"
                    app:cornerRadius="@dimen/_2sdp"
                    app:rippleColor="@color/rippleColor"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/text_black"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.sribs.common.ui.widget.TagEditView
                    android:id="@+id/after_number"
                    android:layout_width="210dp"
                    android:layout_height="@dimen/login_input_height"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:TagText="地下楼层总数"
                    app:TagPadding="@dimen/login_input_tag_margin"
                    app:EditBtnEnable="false"
                    app:EditEnable="true"
                    app:TagMust="false"
                    android:inputType="number"
                    app:EditHint="请输入地下楼层总数"/>
                <com.sribs.common.ui.widget.TagEditView
                    android:id="@+id/above_number"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="210dp"
                    android:layout_height="@dimen/login_input_height"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:TagText="地上楼层总数"
                    app:TagPadding="@dimen/login_input_tag_margin"
                    app:EditBtnEnable="false"
                    app:EditEnable="true"
                    app:TagMust="false"
                    android:inputType="number"
                    app:EditHint="请输入地上楼层总数"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="@dimen/_9ssp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_29sdp"
                    app:backgroundTint="@color/blue_800"
                    android:textColor="@color/white" />
                <Button
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/_9ssp"
                    android:layout_weight="1"
                    android:text="楼层名称"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_29sdp"
                    app:backgroundTint="@color/blue_800"
                    android:textColor="@color/white" />
                <Button
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/_9ssp"
                    android:layout_weight="1"
                    android:text="图纸"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_29sdp"
                    app:backgroundTint="@color/blue_800"
                    android:textColor="@color/white" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/flour_recycleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/text_black"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:paddingTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chose_pic_list"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    app:backgroundTint="@color/blue_800"
                    android:text="选择图纸"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    app:cornerRadius="@dimen/_2sdp"
                    app:rippleColor="@color/rippleColor"
                    android:theme="@style/Theme.MaterialComponents.Light"

                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chose_white_list"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    app:backgroundTint="@color/blue_800"
                    android:text="白板"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    app:cornerRadius="@dimen/_2sdp"
                    app:rippleColor="@color/rippleColor"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chose_photo_list"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    app:backgroundTint="@color/blue_800"
                    android:text="拍照"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    app:cornerRadius="@dimen/_2sdp"
                    app:rippleColor="@color/rippleColor"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
            </LinearLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/_9ssp"
                    android:text="图纸名"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_29sdp"
                    app:backgroundTint="@color/blue_800"
                    android:textColor="@color/white" />

                <Button
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_9ssp"
                    android:text="操作"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_29sdp"
                    app:backgroundTint="@color/blue_800"
                    android:textColor="@color/white" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pic_recycleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>





    </androidx.core.widget.NestedScrollView>



</LinearLayout>