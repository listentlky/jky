<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_20sdp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/check_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_7ssp"
        android:layout_marginRight="@dimen/_5sdp"
        android:gravity="center"
        android:text="实测 保护层厚度"
        android:textColor="@color/black"
        android:textSize="@dimen/_6ssp" />

    <LinearLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="厚度"
            android:textSize="@dimen/_5ssp"></TextView>

        <EditText
            android:id="@+id/check_edit_protect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/check_gray_is_edit_selector"
            android:gravity="center_vertical"
            android:minWidth="@dimen/_80sdp"
            android:inputType="numberDecimal"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_600"
            android:textSize="@dimen/_6ssp" />


    </LinearLayout>



</LinearLayout>