<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/damage_text"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/damage_type_cardView"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:ellipsize="end"
        android:lines="2"
        android:background="@drawable/mark_text_bg"
        android:textColor="@color/black_800"
        android:textSize="@dimen/_4ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="3:2"
        android:layout_height="0dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/damage_type_cardView"
            android:layout_width="0dp"
            app:cardCornerRadius="@dimen/_100sdp"
            app:cardBackgroundColor="@color/blue_800"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/damage_type"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_6ssp"
            android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>