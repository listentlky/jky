<?xml version="1.0" encoding="utf-8"?>
<com.radaee.util.RDRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <com.radaee.util.RDImgView
        android:id="@+id/img_more"
        android:src="@drawable/btn_more"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_toStartOf="@id/img_more"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="@color/panel_text_color"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@id/img_more"
        android:layout_alignParentTop="true"
        android:src="@drawable/btn_annot_note" />

</com.radaee.util.RDRelativeLayout>