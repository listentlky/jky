<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_26sdp"
    android:background="@drawable/ic_bk_bottom_border"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/item_house_config_name"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_sel_room_list"
            android:textColor="@color/black_800"
            android:drawablePadding="@dimen/_6sdp"
            android:textSize="@dimen/common_text_title"
            android:layout_gravity="left|center_vertical"
            android:paddingLeft="@dimen/_12sdp"
            />

        <TextView
            android:id="@+id/item_house_config_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_7sdp"
            android:textColor="@color/blue_800"
            android:textSize="@dimen/_6sdp"
            android:text="房屋现状"
            android:layout_marginLeft="@dimen/_15sdp"
            android:drawableLeft="@mipmap/icon_house_edit_status1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:drawablePadding="@dimen/_3sdp"

            android:background="@drawable/ic_bk_house_config_list_btn"
            />
        <TextView
            android:id="@+id/item_house_config_status_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_7sdp"
            android:textColor="@color/blue_800"
            android:textSize="@dimen/_6sdp"
            android:text="清空记录"
            android:layout_marginLeft="@dimen/_8sdp"
            android:drawableLeft="@mipmap/icon_house_clear_status"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:drawablePadding="@dimen/_3sdp"
            android:background="@drawable/ic_bk_house_config_list_btn"
            />


    </LinearLayout>






    <ImageView
        android:id="@+id/item_house_damage_btn"
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_13sdp"
        android:src="@drawable/ic_icon_arrow_right"
        android:scaleType="fitXY"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_gravity="right|center_vertical"
        />

</FrameLayout>