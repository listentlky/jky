<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_800_10"
    android:id="@+id/cl_item_floor_facade">

    <TextView
        android:id="@+id/tv_facade"
        style="@style/TableText"
        android:layout_width="0dp"
        android:layout_height="@dimen/_32sdp"
        android:layout_gravity="left"
        android:clickable="true"
        android:drawableLeft="@mipmap/icon_unit_config"
        android:foreground="?attr/selectableItemBackground"
        android:drawablePadding="-10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="上传东立面图纸"
        android:textColor="@color/green_400"
        android:textSize="@dimen/_7sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <TextView
        android:id="@+id/tv_drawings"
        android:layout_width="0dp"
        android:layout_height="@dimen/_32sdp"
        android:layout_gravity="top"
        style="@style/TableText"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/tv_facade"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:textSize="@dimen/_7sdp" />

</androidx.constraintlayout.widget.ConstraintLayout>